{
"extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "groupName": "all",
   "ignoreDeps": [
    "keycloak-js"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "transitiveRemediation": true,
  "packageRules": [
     {
      "matchPackageNames": ["github.com/redhat-developer/app-services-sdk-go"],
      "groupName": "RHOAS Golang SDK",
      "automerge": false
    },
    {
      "matchPackageNames": ["@patternfly/react-core"],
      "groupName": "Patternfly - React",
      "allowedVersions": "4.181.1",
      "automerge": true
    },
    {
      "matchPackageNames": ["@patternfly/react-table"],
      "groupName": "Patternfly - React",
      "allowedVersions": "4.50.1",
      "automerge": true
    },
    {
      "matchPackageNames": ["@patternfly/react-icons"],
      "groupName": "Patternfly - React",
      "allowedVersions": "4.32.1",
      "automerge": true
    },      
    {
      "matchPackagePatterns": ["^@patternfly"],
      "groupName": "Patternfly",
      "automerge": true,
      "allowedVersions": "4.164.2"
    },
    {
      "matchPackagePatterns": ["^@rhoas"],
      "groupName": "RHOAS JS SDK packages",
      "automerge": true
    },
    {
      "matchPackagenames": ["@bf2/ui-shared"],
      "groupName": "Shared components packages",
      "automerge": true,
      "version": "0.2.2"
    },
    {
      "matchPackageNames": ["react", "react-dom", "react-test-renderer"],
      "groupName": "React Core",
      "allowedVersions": "17.0.2",
      "automerge": true
    },
    {
      "matchPackageNames": ["react-router-dom"],
      "groupName": "React Router Dom",
      "allowedVersions": "5.2.1",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@redhat-cloud-services"],
      "groupName": "Red Hat Cloud Services packages",
      "automerge": true
    }
  ]
}
